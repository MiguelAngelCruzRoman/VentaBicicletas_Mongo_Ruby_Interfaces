<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

<h1>Editar Tienda</h1>

<%= form_with(model: @tienda, url: tienda_path(@tienda), method: :patch, class: "row g-3") do |form| %>
  <% if @tienda.errors.any? %>
    <div id="error_explanation" class="col-12">
      <h2><%= pluralize(@tienda.errors.count, "error") %> prohibieron que esta tienda sea actualizada:</h2>
      <ul>
        <% @tienda.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-md-6">
    <%= form.label :"Nombre", class: "form-label" %>
    <%= form.text_field :nombre, class: "form-control" %>
  </div>

  <div class="col-md-6">
    <%= form.label :"Teléfono", class: "form-label" %>
    <%= form.text_field :telefono, class: "form-control" %>
  </div>

  <div class="col-md-6">
    <%= form.label :"Horario", class: "form-label" %>
    <%= form.text_field :horario, class: "form-control" %>
  </div>

  <div class="col-md-6">
    <%= form.fields_for :direccion do |direccion_form| %>
      <div class="row">
        <div class="col-md-6">
          <%= direccion_form.label :"Calle", class: "form-label" %>
          <%= direccion_form.text_field :calle, class: "form-control" %>
        </div>
        <div class="col-md-6">
          <%= direccion_form.label :"Ciudad", class: "form-label" %>
          <%= direccion_form.text_field :ciudad, class: "form-control" %>
        </div>
        <div class="col-md-6">
          <%= direccion_form.label :"Estado", class: "form-label" %>
          <%= direccion_form.text_field :estado, class: "form-control" %>
        </div>
        <div class="col-md-6">
          <%= direccion_form.label :"País", class: "form-label" %>
          <%= direccion_form.text_field :pais, class: "form-control" %>
        </div>
        <div class="col-md-6">
          <%= direccion_form.label :"Código Postal", class: "form-label" %>
          <%= direccion_form.text_field :codigo_postal, class: "form-control" %>
        </div>
        <div class="col-md-6">
          <%= direccion_form.label :"Colonia", class: "form-label" %>
          <%= direccion_form.text_field :colonia, class: "form-control" %>
        </div>
        <div class="col-md-6">
          <%= direccion_form.label :"Número", class: "form-label" %>
          <%= direccion_form.text_field :numero, class: "form-control" %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="col-12">
    <%= form.submit 'Actualizar Tienda', class: "btn btn-warning" %>
  </div>
<% end %>
